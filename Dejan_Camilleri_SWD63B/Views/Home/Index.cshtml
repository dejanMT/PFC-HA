@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @User.Identity.Name</h1>
    <p>Is there any thing you need help with?</p>

    <div class="container my-4">
        <div class="row g-4 justify-content-center">
            @if (User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value == "User")
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Open Ticket</h5>
                            <p class="card-text flex-grow-1">
                                Report a new incident
                            </p>
                            <a class="btn btn-secondary" asp-controller="Support" asp-action="Index">Open Ticket</a>
                        </div>
                    </div>
                </div>
            }

            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">My Tickets</h5>
                        <p class="card-text flex-grow-1">
                            See previous tickets
                        </p>
                        <a class="btn btn-secondary" asp-controller="Support" asp-action="MyTickets">See My Tickets</a>
                    </div>
                </div>
            </div>
            @if (User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value != "User")
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">See All Tickets</h5>
                            <p class="card-text flex-grow-1">
                                See new opened tickets
                            </p>
                            <a class="btn btn-secondary" asp-controller="Support" asp-action="List">See List</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>



   

</div>
